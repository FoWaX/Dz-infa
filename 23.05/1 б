#include <iostream>
#include <vector>
using namespace std;

int main() {
    vector<int>a;
    int n, num; cin >> n;
    int max_negative = INT_MIN;
    bool has_negative = false;
    for (int i = 0; i < n; i++)
    {
        cin >> num;
        a.push_back(num);
    }
    for (int i = 0; i < n; i++)
    {
        if (a[i] < 0) {
            has_negative = true;
            if (a[i] > max_negative)
            {
                max_negative = a[i];
            }
        }
    }
    if (n % 2 == 0 || !has_negative)
    {
        cout << "ERROR";
    }
    else
    {
        a[n / 2] = max_negative;
    }
    for (int i = 0; i < n; i++)
    {
        cout << a[i] << ' ';
    }
    cout << endl;
}
обращение к элементу за О(1).
